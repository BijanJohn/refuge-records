---
import BaseLayout from '../layouts/BaseLayout.astro';
import RecordGrid from '../components/RecordGrid.astro';
import { getFeaturedRecords } from '../lib/inventory';

const featuredRecords = getFeaturedRecords(8);
---

<BaseLayout title="Home" description="Curated vinyl records for sale. Quality records at fair prices.">
  <!-- Hero Section with Photo -->
  <section class="bg-gray-50 py-16 sm:py-24">
    <div class="container">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
            Record Refuge
          </h1>
          <p class="mt-4 text-lg text-gray-600">
            Curated vinyl records from a personal collection. Quality pressings, fair prices, careful shipping.
          </p>
          <div class="mt-8">
            <a href="/records" class="btn-primary">
              Browse Records
            </a>
          </div>
        </div>
        <div class="relative">
          <img
            src="/jeremy-records.jpg"
            alt="Record collection"
            class="rounded-lg shadow-lg"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Support Local Banner -->
  <section class="bg-gray-900 py-6">
    <div class="container">
      <p class="text-center text-white">
        <span class="font-semibold">Support a local business</span> &mdash;
        Purchasing from this site helps avoid exorbitant fees from Discogs and keeps more money where it belongs.
      </p>
    </div>
  </section>

  <!-- Featured Records -->
  <section class="py-16">
    <div class="container">
      <div class="mb-8 flex items-center justify-between">
        <h2 class="text-2xl font-bold text-gray-900">Latest Additions</h2>
        <a href="/records" class="text-sm font-medium text-gray-600 hover:text-gray-900">
          View all &rarr;
        </a>
      </div>

      <RecordGrid records={featuredRecords} />
    </div>
  </section>

  <!-- Info Section -->
  <section class="border-t border-gray-100 bg-gray-50 py-16">
    <div class="container">
      <div class="mx-auto grid max-w-4xl gap-8 sm:grid-cols-3">
        <div class="text-center">
          <h3 class="font-semibold text-gray-900">Quality Checked</h3>
          <p class="mt-2 text-sm text-gray-600">
            Every record is carefully graded and described accurately.
          </p>
        </div>
        <div class="text-center">
          <h3 class="font-semibold text-gray-900">Secure Shipping</h3>
          <p class="mt-2 text-sm text-gray-600">
            Records are shipped in protective mailers with tracking.
          </p>
        </div>
        <div class="text-center">
          <h3 class="font-semibold text-gray-900">Fair Prices</h3>
          <p class="mt-2 text-sm text-gray-600">
            No marketplace fees means better prices for you.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
