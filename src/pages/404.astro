---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <section class="py-24">
    <div class="container">
      <div class="mx-auto max-w-md text-center">
        <h1 class="text-6xl font-bold text-gray-200">404</h1>

        <h2 class="mt-4 text-2xl font-bold text-gray-900">Page not found</h2>

        <p class="mt-4 text-gray-600">
          Sorry, the page you're looking for doesn't exist or may have been sold.
        </p>

        <div class="mt-8 flex justify-center gap-4">
          <a href="/" class="btn-secondary">
            Go Home
          </a>
          <a href="/records" class="btn-primary">
            Browse Records
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
